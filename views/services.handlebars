{{!-- Header with logo img --}}

<header>
    <img class="logo">
</header>

{{!-- navbar with two buttons: services and deals. Data-highlight to specify when clicked --}}
<nav>
    <a href="/services" class="nav-col" id="services">
        <p>search for</p>
        <p id="big">SERVICES</p>
    </a>
    <a href="/services" class="nav-col" id="deals">
        <p id="deals-text">CURRENT DEALS</p>
</nav>

{{!-- services buttons --}}
<div class="service-buttons">
    <button class="serv-buttons" id="spa">Spa</button>
    <button class="serv-buttons" id="hair">Hair</button>
    <button class="serv-buttons" id="nails">Nails</button>
</div>

{{!-- search results appears in grid of 3 columns --}}
<div class="search-result">
    <div class="row">
        {{#each data}}
        <div class="col-4">{{name}}</div>
        {{/each}}
    </div>
</div>

{{!-- To print cards on grid: https://stackoverflow.com/questions/26831128/handlebars-js-and-bootstrap-grid-wrap-columns-in-row --}}