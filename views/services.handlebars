{{!-- Header with logo img --}}

<header>
    <img class="logo">
</header>

{{!-- navbar with two buttons: services and deals. Data-highlight to specify when clicked --}}
<nav>
    <button id="services" data-highlight="on">Services</button>
    <button id="deals" data-highlight="off">Deals</button>
</nav>

{{!-- services buttons --}}
<div class="service-buttons">
</div>

{{!-- search results appears in grid of 3 columns --}}
<div class="search-result">
    <div class="container">
        <div class="row">
            {{#each data}}
            <div class="col s12 m6 l4">
                <div class="card text-center">
                    <div class="card-body" style="background-image: url('{{image}}');">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{services}}</p>
                        <a href="#" class="btn btn-primary">placeholder</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

{{!-- To print cards on grid: https://stackoverflow.com/questions/26831128/handlebars-js-and-bootstrap-grid-wrap-columns-in-row --}}